{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "openpersona/acn/agent-card",
  "title": "Agent Card",
  "description": "A2A-compliant Agent Card generated by OpenPersona. Follows the a2a-sdk AgentCard specification (protocol_version 0.3.0). Transport-agnostic — url and preferredTransport are runtime-filled placeholders.",
  "type": "object",
  "required": ["name", "description", "version", "url", "capabilities", "defaultInputModes", "defaultOutputModes", "skills"],
  "properties": {
    "name": {
      "type": "string",
      "description": "Human-readable agent name (from personaName)"
    },
    "description": {
      "type": "string",
      "description": "Agent description (from bio)"
    },
    "version": {
      "type": "string",
      "description": "Agent version (from meta.frameworkVersion)"
    },
    "url": {
      "type": "string",
      "description": "A2A endpoint URL — placeholder at generation time, filled by host at runtime"
    },
    "protocolVersion": {
      "type": "string",
      "description": "A2A protocol version",
      "default": "0.3.0"
    },
    "preferredTransport": {
      "type": "string",
      "description": "Preferred transport protocol",
      "default": "JSONRPC"
    },
    "provider": {
      "type": "object",
      "description": "Agent provider information (optional)",
      "properties": {
        "organization": { "type": "string" },
        "url": { "type": "string" }
      }
    },
    "documentationUrl": {
      "type": "string",
      "description": "URL to agent documentation (optional)"
    },
    "iconUrl": {
      "type": "string",
      "description": "URL to agent icon (optional)"
    },
    "capabilities": {
      "type": "object",
      "description": "A2A protocol capabilities",
      "required": ["streaming", "pushNotifications", "stateTransitionHistory"],
      "properties": {
        "streaming": { "type": "boolean" },
        "pushNotifications": { "type": "boolean" },
        "stateTransitionHistory": { "type": "boolean" }
      },
      "additionalProperties": false
    },
    "defaultInputModes": {
      "type": "array",
      "items": { "type": "string" },
      "description": "Supported input MIME types (e.g. 'text/plain', 'application/json')"
    },
    "defaultOutputModes": {
      "type": "array",
      "items": { "type": "string" },
      "description": "Supported output MIME types"
    },
    "skills": {
      "type": "array",
      "description": "Agent skills derived from faculties and local skills",
      "items": {
        "type": "object",
        "required": ["id", "name"],
        "properties": {
          "id": { "type": "string", "description": "Skill identifier (e.g. 'persona:voice')" },
          "name": { "type": "string", "description": "Human-readable skill name" },
          "description": { "type": "string", "description": "Skill description" },
          "tags": { "type": "array", "items": { "type": "string" } },
          "inputModes": { "type": "array", "items": { "type": "string" } },
          "outputModes": { "type": "array", "items": { "type": "string" } }
        },
        "additionalProperties": false
      }
    },
    "securitySchemes": {
      "type": "object",
      "description": "Authentication schemes (optional, runtime-configured by host)"
    },
    "security": {
      "type": "array",
      "description": "Security requirements list (optional)"
    }
  },
  "additionalProperties": false
}
